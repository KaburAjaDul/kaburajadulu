---
export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  gscVerification?: string;
}

const { title, description = "Temukan peluang untuk bekerja, belajar, atau menjelajahi dunia dengan sumber daya komprehensif, daftar pekerjaan, beasiswa, kelas bahasa, dan banyak lagi.", canonical, gscVerification } = Astro.props;

// Generate canonical URL
const canonicalURL = canonical || `https://kaburajadulu.com${Astro.url.pathname}`;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>{title}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&family=Caveat:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    
    <!-- Meta tags -->
    <meta name="keywords" content="peluang internasional, kerja di luar negeri, kuliah di luar negeri, traveling, beasiswa, kelas bahasa, karir global, komunitas expatriat" />
    <meta name="author" content="Tim KaburAjaDulu" />
    <meta name="robots" content="index, follow" />
    
    <!-- Google Search Console Verification -->
    {gscVerification && <meta name="google-site-verification" content={gscVerification} />}
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://kaburajadulu.com/images/og-image.png" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://kaburajadulu.com/images/og-image.png" />
    
    <!-- JSON-LD Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "KaburAjaDulu",  
        "description": "Platform untuk menemukan peluang internasional - kerja, kuliah, dan traveling",
        "url": "https://kaburajadulu.com",
        "logo": "https://kaburajadulu.com/icon.svg",
        "foundingDate": "2024",
        "founder": {
          "@type": "Organization", 
          "name": "Tim KaburAjaDulu"
        },
        "sameAs": [
          "https://discord.com/invite/KaburAjaDulu"
        ],
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://kaburajadulu.com/?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
    
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "KaburAjaDulu",
        "description": "Temukan peluang untuk bekerja, belajar, atau menjelajahi dunia",
        "url": "https://kaburajadulu.com"
      }
    </script>
  </head>
  <body class="font-sans antialiased">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --font-sans: 'Plus Jakarta Sans', sans-serif;
    --font-caveat: 'Caveat', cursive;
  }
  
  body {
    font-family: var(--font-sans);
  }
  
  .font-caveat {
    font-family: var(--font-caveat);
  }
</style>